<Window x:Class="VideoFritter.ExportQueue.ExportQueueWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:Converters="clr-namespace:VideoFritter.Converters"
        xmlns:local="clr-namespace:VideoFritter.ExportQueue"
        xmlns:p="clr-namespace:VideoFritter.Properties"
        mc:Ignorable="d"
        Title="{x:Static p:Resources.ExportQueueWindowTitle}" 
        Height="450" 
        Width="800"
        Style="{StaticResource DefaultWindowStyle}"
        >

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>

        <ListBox 
            x:Name="listBox" 
            Grid.Row="0" 
            ItemsSource="{Binding Queue}"
            />
        
        <DockPanel Grid.Row="1">
            <Button Name="startQueueButton"
                    DockPanel.Dock="Left"
                    Margin="10, 5" 
                    Padding="10, 2" 
                    Content="Start" 
                    ToolTip="{x:Static p:Resources.StartExportQueue}"
                    IsEnabled="{Binding IsExporting, Mode=OneWay, Converter={StaticResource inverseBoolConverter}}"
                    Click="StartQueueButton_Click" />

            <Button Name="clearQueueButton"
                    DockPanel.Dock="Left"
                    Margin="10, 5" 
                    Padding="10, 2" 
                    ToolTip="{x:Static p:Resources.ClearExportQueue}"
                    Content="Clear" 
                    Click="ClearQueueButton_Click" />

            <Button Name="deleteSelectedButton"
                    DockPanel.Dock="Left"
                    Margin="10, 5" 
                    Padding="10, 2" 
                    ToolTip="{x:Static p:Resources.RemoveFromExportQueue}"
                    Content="Delete selected" 
                    Click="DeleteSelectedButton_Click"/>

            <ProgressBar Name="progressBar"
                         DockPanel.Dock="Right" 
                         Minimum="0" 
                         Maximum="1"
                         Margin="10"
                         IsIndeterminate="{Binding IsIndeterminateProgess, Mode=OneWay}"
                         Value="{Binding ExportProgress, Mode=OneWay}"/>
            
        </DockPanel>
    </Grid>
</Window>
